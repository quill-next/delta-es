{
  "name": "quill-delta-es",
  "version": "5.2.9",
  "description": "The es module port of quill delta",
  "author": "Vincent Chan <okcdz@diverse.space>",
  "homepage": "https://github.com/vincentdchan/delta-es",
  "main": "dist/Delta.js",
  "type": "module",
  "exports": {
    "types": "./dist/types/Delta.d.ts",
    "import": "./dist/esm/Delta.js",
    "require": "./dist/cjs/Delta.cjs",
    "default": "./dist/esm/Delta.js"
  },
  "dependencies": {
    "fast-diff": "^1.3.0",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "@vitest/coverage-c8": "^0.22.1",
    "esbuild": "^0.19.5",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2",
    "vitest": "^0.22.1"
  },
  "engines": {
    "node": ">= 12.0.0"
  },
  "files": [
    "tsconfig.json",
    "dist",
    "src"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.esm.json && esbuild --bundle dist/esm/Delta.js --outfile=dist/cjs/Delta.cjs --format=cjs --platform=node --sourcemap",
    "prepare": "npm run build",
    "lint": "eslint 'src/**/*.ts'",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-namespace": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quilljs/delta"
  },
  "bugs": {
    "url": "https://github.com/quilljs/delta/issues"
  },
  "keywords": [
    "rich text",
    "ot",
    "operational transform",
    "delta"
  ]
}
